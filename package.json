{
  "name": "fintrack",
  "version": "1.0.0",
  "description": "Financial tracking application",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\"",
    "vercel-build": "cd backend && npm install && cd ../frontend && npm install",
    "build": "cd backend && npm install && cd ../frontend && npm install"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.0",
    "dotenv": "^16.0.3",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "concurrently": "^8.0.1"
  }
} 